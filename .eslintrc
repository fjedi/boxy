{
    "parser": "babel-eslint",
    "env": {
        "es6": true,
        "browser": true,
        "node": true
    },
    "extends": [
        "airbnb-base",
        "plugin:import/errors",
        "plugin:import/warnings",
        "plugin:sonarjs/recommended",
        "plugin:promise/recommended"
    ],
    "plugins": ["sonarjs", "no-loops", "promise"],
    "rules": {
        "import/no-extraneous-dependencies": [
            "error",
            {
                "packageDir": "./"
            }
        ],
        "allowTernary": true,
        "sonarjs/cognitive-complexity": ["error", 30],
        "no-loops/no-loops": 2
    },
    "settings": {
        "import/resolver": {
            "node": {
                "paths": ["src"],
                "extensions": [".js"]
            }
        }
    }
}